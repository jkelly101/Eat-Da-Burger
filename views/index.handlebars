<h1>Eat-Da-Burger!</h1>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

<h2>Burger Menu:</h2>

<ol>
  {{#each burgers}}
    {{#unless devoured}}
    <li>
      {{burger_name}}
      <button class="changeToDevoured" data-devoured={{devoured}} data-id={{id}}>Devour It!</button>
    </li>
    {{/unless}}
  {{/each}}
</ol>

<h2>Burgers You've Devoured!</h2>

<ol>
  {{#each burgers}}
    {{#if devoured}}
    <li>
      {{burger_name}}
    </li>
    {{/if}}
  {{/each}}
</ol>


